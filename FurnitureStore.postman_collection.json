{
  "info": {
    "name": "Furniture Store API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "values": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "enabled": true
      },
      {
        "key": "token",
        "value": "",
        "enabled": true
      }
    ]
  },
  "item": [
    {
      "name": "1. Auth",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Admin User",
                "email": "admin@example.com",
                "password": "admin123",
                "role": "admin"
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Test User",
                "email": "user@example.com",
                "password": "user123"
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "admin@example.com",
                "password": "admin123"
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Get Users (Admin)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/users",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Categories",
      "item": [
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/categories",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Chairs",
                "description": "All types of chairs"
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/categories",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Woods",
      "item": [
        {
          "name": "Create Wood",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/woods",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Teak",
                "priceMultiplier": 1.5
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Get Woods",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/woods",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Furniture",
      "item": [
        {
          "name": "Create Furniture",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/furniture",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Office Chair",
                "category": "{{categoryId}}",
                "basePrice": 100,
                "description": "Comfortable office chair",
                "woodTypes": [
                  {
                    "woodType": "{{woodId}}",
                    "priceMultiplier": 1.5
                  }
                ]
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Get All Furniture",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/furniture",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/orders",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "items": [
                  {
                    "furniture": "{{furnitureId}}",
                    "woodType": "{{woodId}}",
                    "quantity": 2
                  }
                ]
              },
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/orders",
            "auth": {
              "type": "bearer",
              "bearer": ["{{token}}"]
            }
          }
        }
      ]
    }
  ]
}